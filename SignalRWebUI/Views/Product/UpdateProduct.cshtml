@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Ürün Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <input type="hidden" asp-for="ProductID" />
                            <div class="form-group">
                                <label for="productname">Ürün Adını Giriniz</label>
                                <input type="text" asp-for="ProductName" class="form-control" id="productname">
                            </div>
                            <div class="form-group">
                                <label for="price">Ürün Fiyatını Giriniz</label>
                                <input type="text" asp-for="Price" class="form-control" id="price">
                            </div>
                            <div class="form-group">
                                <label for="imageurl">Ürün Görselini Giriniz</label>
                                <input type="text" asp-for="ImageUrl" class="form-control" id="imageurl">
                            </div>
                            <div class="form-group">
                                <label for="price">Ürün Kategorisini Seçiniz</label>
                                @Html.DropDownListFor(x=>x.CategoryID, (List<SelectListItem>)ViewBag.v, new{@class = "form-control"})
                            </div>
                            <div class="form-group">
                                <label for="description">Ürün Açıklamasını Giriniz</label>
                                <input type="text" asp-for="Description" class="form-control" id="description">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Ürünü Güncelle</button>
                            <a href="/Product/Index/" class="btn btn-dark">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>