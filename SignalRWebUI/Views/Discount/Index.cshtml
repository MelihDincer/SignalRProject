@model List<ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Günün İndirimleri İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Günün İndirimleri Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Günün İndirimleri Ürünleri Aşağıda Yer Almaktadır. Tema bütünlüğü için sadece <strong>2 Adet</strong> indirimli ürün seçiniz. Sayfada sadece aktif indirimler yer alacaktır.
                        </div>
                        <table class="table mt-3 text-center">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün</th>
                                    <th scope="col">İndirim Oranı</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Aktif Yap</th>
                                    <th scope="col">Pasif Yap</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.Amount</td>
                                        <td><span class="badge badge-sm badge-secondary">@item.Status</span></td>
                                        <td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-danger btn-rounded" onclick="return confirm('Bu indirimi silmek istediğinize emin misiniz?')">Sil</a></td>
                                        <td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
                                        <td><a href="/Discount/ChangeStatusDiscountToTrue/@item.DiscountID" class="btn btn-outline-warning btn-rounded">Aktif Yap</a></td>
                                        <td><a href="/Discount/ChangeStatusDiscountToFalse/@item.DiscountID" class="btn btn-outline-dark btn-rounded">Pasif Yap</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Discount/CreateDiscount/" class="btn btn-primary">Yeni İndirimli Ürün Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>