@model UpdateDiscountDto
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirimli Ürün İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İndirimli Ürün Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <input type="hidden" asp-for="DiscountID" />
                                <label for="Title">Ürün Adını Giriniz</label>
                                <input type="text" asp-for="Title" class="form-control" id="Title">
                            </div>
                            <div class="form-group">
                                <label for="Amount">Ürün İndirim Oranını Giriniz</label>
                                <input type="text" asp-for="Amount" class="form-control" id="Amount">
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Ürün Görselini Giriniz</label>
                                <input type="text" asp-for="ImageUrl" class="form-control" id="ImageUrl">
                            </div>
                            <div class="form-group">
                                <label for="Description">Ürün Açıklamasını Giriniz</label>
                                <input type="text" asp-for="Description" class="form-control" id="Description">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Kaydet</button>
                            <a href="/Category/Index/" class="btn btn-dark">Vazgeç</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>