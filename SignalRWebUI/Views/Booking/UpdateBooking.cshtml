@model UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyon İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post" asp-action="UpdateBooking" asp-controller="Booking">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Rezervasyon Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <input type="hidden" asp-for="BookingID" />
                                <label for="Name">Ad Soyad</label>
                                <input type="text" asp-for="Name" class="form-control" id="Name">
                            </div>
                            <div class="form-group">
                                <label for="Phone">Telefon</label>
                                <input type="text" asp-for="Phone" class="form-control" id="Phone">
                            </div>
                            <div class="form-group">
                                <label for="Mail">Mail Adresi</label>
                                <input type="email" asp-for="Mail" class="form-control" id="Mail">
                            </div>
                            <div class="form-group">
                                <label for="PersonCount">Kişi Sayısı</label>
                                <input type="text" asp-for="PersonCount" class="form-control" id="PersonCount">
                            </div>
                            <div class="form-group">
                                <label for="Date">Rezervasyon Tarihi</label>
                                <input type="date" asp-for="Date" class="form-control" id="Date">
                            </div>
                            <div class="form-group">
                                <label for="Description">Rezervasyon Durumu</label>
                                <br />
                                @* <input type="text" asp-for="Description" class="form-control" id="Description"> *@
                                @Html.DropDownList("description",(IEnumerable<SelectListItem>)ViewBag.description, new{@class="form-control"})
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Kaydet</button>
                            <a href="/Booking/ApprovalPendingBookingList/" class="btn btn-dark">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>