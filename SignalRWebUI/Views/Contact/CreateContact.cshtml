@model CreateContactDto
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İletişim Yazı Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Lokasyonu Giriniz</label>
                                <input type="text" asp-for="Location" class="form-control" id="Title">
                            </div>
                            <div class="form-group">
                                <label for="PhoneNumber">Telefon Numarası Giriniz</label>
                                <input type="text" asp-for="PhoneNumber" class="form-control" id="PhoneNumber">
                            </div>
                            <div class="form-group">
                                <label for="Mail">Mail Adresi Giriniz</label>
                                <input type="email" asp-for="Mail" class="form-control" id="Mail">
                            </div>                            
                            <div class="form-group">
                                <label for="OpenDays">Açık Günler</label>
                                <input type="text" asp-for="OpenDays" class="form-control" id="OpenDays">
                            </div>
                            <div class="form-group">
                                <label for="OpenDaysDescription">Açık Günler Açıklama</label>
                                <input type="text" asp-for="OpenDaysDescription" class="form-control" id="OpenDaysDescription">
                            </div>
                            <div class="form-group">
                                <label for="OpenHours">Açık Saatler</label>
                                <input type="text" asp-for="OpenHours" class="form-control" id="OpenHours">
                            </div>
                            <div class="form-group">
                                <label for="FooterTitle">Alt Başlık</label>
                                <input type="text" asp-for="FooterTitle" class="form-control" id="FooterTitle">
                            </div>
                            <div class="form-group">
                                <label for="FooterDescription">Alt Açıklama Alanı</label>
                                <textarea rows="5" class="form-control" asp-for="FooterDescription"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-info">İletişim Bilgi Yazısını Ekle</button>
                            <a href="/Contact/Index/" class="btn btn-dark">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>