@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İletişim alanıyla ilgili işlemleri yapabilirsiniz. Tema bütünlüğü için sadece <strong>1 tane</strong> iletişim alanı oluşturmayı unutmayın.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th class="text-center" scope="col">Konum</th>
                                    <th class="text-center" scope="col">Telefon</th>
                                    <th class="text-center" scope="col">Mail</th>
                                    <th class="text-center" scope="col">Açıklama</th>
                                    <th class="text-center" scope="col">Sil</th>
                                    <th class="text-center" scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">@item.Location</td>
                                        <td class="text-center">@item.PhoneNumber</td>
                                        <td class="text-center">@item.Mail</td>
                                        <td>@item.FooterDescription</td>
                                        <td class="text-center"><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-outline-danger btn-rounded" onclick="return confirm('İletişim bilgisini silmek istediğinize emin misiniz?')">Sil</a></td>
                                        <td class="text-center"><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Contact/CreateContact/" class="btn btn-primary">Yeni İletişim Yazısı Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>