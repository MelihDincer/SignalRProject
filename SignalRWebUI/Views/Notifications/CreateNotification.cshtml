@model CreateNotificationDto
@{
    ViewData["Title"] = "CreateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Bildirim Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Type">Bildirim Türü</label>
                                <input type="text" asp-for="Type" class="form-control" id="Type">
                            </div>
                            <div class="form-group">
                                <label for="Icon">Bildirim İkonu</label>
                                <input type="text" asp-for="Icon" class="form-control" id="Icon">
                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklama</label>
                                <textarea rows="5" class="form-control" asp-for="Description" id="Description"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-info">Bildirimi Ekle</button>
                            <a href="/Notifications/Index/" class="btn btn-dark">İptal</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>