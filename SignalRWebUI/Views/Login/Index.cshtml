@model LoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>SignalR Restoran Giriş Sayfası</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
				<img src="~/colorlib-regform-32/images/register.jpg" alt="form" style="height:500px; width:534px">
			</div>
			<form class="form-detail" method="post">
				<h2>Giriş Formu</h2>
				<div class="form-row">
					<input type="text" id="full-name" class="input-text" placeholder="Kullanıcı Adınız" asp-for="UserName" required>
				</div>
				<div class="form-row">
					<input type="password" asp-for="Password" id="password" class="input-text" placeholder="Şifreniz" required>
				</div>
				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Giriş Yap">
				</div>
			</form>
		</div>
	</div>
</body>
</html>