@model UserEditDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Profil Ayarları</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Şifre ve Bilgi Güncelleme Sayfası</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Name">Adınız</label>
                                <input type="text" asp-for="Name" class="form-control" id="Name">
                            </div>
                            <div class="form-group">
                                <label for="Surname">Soyadınız</label>
                                <input type="text" asp-for="Surname" class="form-control" id="Surname">
                            </div>
                            <div class="form-group">
                                <label for="Mail">Mail Adresiniz</label>
                                <input type="email" asp-for="Mail" class="form-control" id="Mail">
                            </div>
                            <div class="form-group">
                                <label for="Username">Kullanıcı Adınız</label>
                                <input type="text" asp-for="Username" class="form-control" id="Username">
                            </div>
                            <div class="form-group">
                                <label for="Password">Yeni Şifreniz</label>
                                <input type="password" asp-for="Password" class="form-control" id="Password">
                            </div>
                            <div class="form-group">
                                <label for="ConfirmPassword">Yeni Şifreniz Tekrar</label>
                                <input type="password" asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword">
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-success">Bilgileri Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
