@model List<ResultSliderDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan Alan İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Öne Çıkan Alan Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Ana sayfada öne çıkan alan ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz. <strong>Lütfen sadece 1 tane öne çıkan alan verisi oluşturun</strong>
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th class="text-center" scope="col">Başlık 1</th>
                                    <th class="text-center" scope="col">Başlık 2</th>
                                    <th class="text-center" scope="col">Başlık 3</th>
                                    <th class="text-center" scope="col">Açıklama 1</th>
                                    <th class="text-center" scope="col">Açıklama 2</th>
                                    <th class="text-center" scope="col">Açıklama 3</th>
                                    <th class="text-center" scope="col">Sil</th>
                                    <th class="text-center" scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">@item.Title1</td>
                                        <td class="text-center">@item.Title2</td>
                                        <td class="text-center">@item.Title3</td>
                                        <td>@item.Description1</td>
                                        <td>@item.Description2</td>
                                        <td>@item.Description3</td>
                                        <td class="text-center"><a href="/Slider/DeleteSlider/@item.SliderID" class="btn btn-outline-danger btn-rounded" onclick="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?')">Sil</a></td>
                                        <td class="text-center"><a href="/Slider/UpdateSlider/@item.SliderID" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Slider/CreateSlider/" class="btn btn-primary">Yeni Öne Çıkan Alan Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>