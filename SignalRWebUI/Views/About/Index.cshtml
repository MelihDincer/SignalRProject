@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkımızda Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Hakkımızda alanıyla ilgili işlemleri yapabilirsiniz. Tema bütünlüğü için sadece 1 tane hakkımızda alanı oluşturmayı unutmayın.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th class="text-center" scope="col">Başlık</th>
                                    <th class="text-center" scope="col">Açıklama</th>
                                    <th class="text-center" scope="col">Sil</th>
                                    <th class="text-center" scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center">@item.Title</td>
                                        <td>@item.Description</td>
                                        <td class="text-center"><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-outline-danger btn-rounded" onclick="return confirm('Hakkımda bilgisini silmek istediğinize emin misiniz?')">Sil</a></td>
                                        <td class="text-center"><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/About/CreateAbout/" class="btn btn-primary">Yeni Hakkımda Yazısı Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>